# Tapo Account Credentials
# Copy this file to .env and fill in your credentials

TP_LINK_EMAIL=your-email@example.com
TP_LINK_PASSWORD=your-password

# Required: Device IP address on your local network
# You can find the IP address in your router's admin panel or by checking connected devices
# Example: 192.168.1.100
TAPO_DEVICE_IP=192.168.0.124

# Battery Charging Thresholds (for laptop_battery_loop.py)
# Start charging when battery drops to this percentage
BATTERY_START_THRESHOLD=40
# Stop charging when battery reaches this percentage
BATTERY_STOP_THRESHOLD=80
# Time in seconds between battery level checks
BATTERY_CHECK_INTERVAL=60

